@model IEnumerable<WebShopProject.Models.Order>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Place new order", "New")
</p>

<div class="row">
    <div class="col-md-12">
        <table id="orders" class="table  table-hover bg-white">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Adress</th>
                    <th>Order date</th>
                    <th>Arrival date</th>
                    <th>Edit</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td><a href="/Order/Details/@order.Id">@order.City</a></td>
                        <td>@order.Amount</td>
                        <td>@order.OrderAdress</td>
                        <td>@order.OrderDate</td>
                        <td>@order.ArrivalDate</td>
                        <td><a href="/Order/Edit/@order.Id">Edit</a></td>
                        <td><a href="/Order/Delete/@order.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#orders").DataTable();
        });
    </script>
}
